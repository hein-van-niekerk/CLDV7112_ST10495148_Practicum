@page
@model ST10495148_Practicum.Pages.DashboardModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="container">
    <h1 class="display-4">Real-Time Processing Dashboard</h1>
    
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-white bg-primary">
                <div class="card-body">
                    <h5 class="card-title">Total Events</h5>
                    <h2>@Model.TotalEvents</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-success">
                <div class="card-body">
                    <h5 class="card-title">Processed Events</h5>
                    <h2>@Model.ProcessedEvents</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-warning">
                <div class="card-body">
                    <h5 class="card-title">Pending Messages</h5>
                    <h2>@Model.PendingMessages</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-info">
                <div class="card-body">
                    <h5 class="card-title">Processing Rate</h5>
                    <h2>@(Model.TotalEvents > 0 ? Math.Round((double)Model.ProcessedEvents / Model.TotalEvents * 100, 1) : 0)%</h2>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5>Recent Performance Metrics</h5>
                </div>
                <div class="card-body">
                    @if (Model.RecentMetrics.Any())
                    {
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Metric</th>
                                    <th>Value</th>
                                    <th>Unit</th>
                                    <th>Time</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var metric in Model.RecentMetrics)
                                {
                                    <tr>
                                        <td>@metric.MetricName</td>
                                        <td>@metric.Value</td>
                                        <td>@metric.Unit</td>
                                        <td>@metric.Timestamp.ToString("HH:mm:ss")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p class="text-muted">No metrics available yet.</p>
                    }
                </div>
            </div>
        </div>
        
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5>Recent Events</h5>
                </div>
                <div class="card-body">
                    @if (Model.RecentEvents.Any())
                    {
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Event Type</th>
                                    <th>Source</th>
                                    <th>Status</th>
                                    <th>Time</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var evt in Model.RecentEvents)
                                {
                                    <tr>
                                        <td>@evt.EventType</td>
                                        <td>@evt.Source</td>
                                        <td>
                                            @if (evt.IsProcessed)
                                            {
                                                <span class="badge bg-success">Processed</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-warning">Pending</span>
                                            }
                                        </td>
                                        <td>@evt.Timestamp.ToString("HH:mm:ss")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p class="text-muted">No events available yet.</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="mt-4">
        <a asp-page="/LoadTest" class="btn btn-primary">Run Load Test</a>
        <a asp-page="/TestConnection" class="btn btn-secondary">Test Connection</a>
        <button class="btn btn-success" onclick="location.reload()">Refresh Dashboard</button>
    </div>
</div>

<script>
    // Auto-refresh every 30 seconds
    setTimeout(function() {
        location.reload();
    }, 30000);
</script>
